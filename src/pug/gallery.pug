							li(class="gallery_item")
								div(class="gallery_image_container")
									img(class="gallery_image" loading="lazy" alt="" src= link + images[i] width="500" height="300")
								h2(class="gallery_title fs_18")
									a(class="gallery_link" href="#0")= title[i]



				include components/sidebarTop.pug



			div(class="row mb_70")
				div(class="gallery")

					ul(class="gallery_list row")
						- for (let i = 0; i < images.length; i++)
							li(class="gallery_item")
								div(class="gallery_image_container")
									img(class="gallery_image" loading="lazy" alt="" src= link + images[i] width="500" height="300")
								h2(class="gallery_title fs_18")
									a(class="gallery_link" href="#0")= title[i]



				include components/sidebarBanner.pug


		include components/footer.pug
		include components/scrolltop
